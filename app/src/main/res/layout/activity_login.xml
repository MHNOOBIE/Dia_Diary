<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/bg_master"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:background="@drawable/dia_logo"
        android:layout_width="154dp"
        android:layout_height="151dp"
        android:layout_marginTop="77dp"
        android:layout_gravity="center_horizontal"

        />
    <EditText
        android:id="@+id/email_id"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:hint="Email-ID"
        android:textColorHint="#9A9A9A"
        android:textColor="#111"
        android:inputType="textPersonName"
        android:background="@drawable/u_p_et"
        android:layout_marginTop="25.5dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <EditText
        android:id="@+id/password"
        android:hint="Password"
        android:textColorHint="#9A9A9A"
        android:textColor="#111"
        android:inputType="textPassword"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:background="@drawable/u_p_et"
        android:layout_marginTop="25.5dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <Button
        android:id="@+id/login_bt"
        android:background="@drawable/login_bt"
        android:text="Login"
        android:layout_width="106.5dp"
        android:layout_height="35dp"
        android:layout_marginTop="25.5dp"
        android:layout_gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/pbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.5dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/register_bt"
        android:background="@drawable/register_bt"
        android:text="Register"
        android:layout_width="106.5dp"
        android:layout_height="35dp"
        android:layout_marginTop="25.5dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="25.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Click here to continue as guest" />

</LinearLayout>

</ScrollView>